{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "impliedStrict": true,
            "classes": true
        }
    },
    "rules": {
        "no-unused-vars": 0,
        "indent": ["error", 2],
        "quotes": ["warn", "single"],
        "semi": ["error", "always"]
    }
}
